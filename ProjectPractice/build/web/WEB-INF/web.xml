<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <servlet>
        <servlet-name>processData</servlet-name>
        <servlet-class>com.controller.processData</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>logintController</servlet-name>
        <servlet-class>com.controller.logintController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>logoutController</servlet-name>
        <servlet-class>com.controller.logoutController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>processData</servlet-name>
        <url-pattern>/processData</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>logintController</servlet-name>
        <url-pattern>/logintController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>logoutController</servlet-name>
        <url-pattern>/logoutController</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
